<%- include("partials/header")-%>

<div class="ui main text container">
    <div class="ui huge header search">Search Results</div>
    <div class="ui top attached segment">
        <div class="ui divided items">
            <a class="button" href="/">Search Again</a>
            <% movies["Search"].forEach(function(movie){ %>
            <div class="item">
                <div class="image">
                    <img src="<%=movie["Poster"]%>">
                </div>
                <div class="content">
                    <a href="/movies/<%=movie["imdbID"]%>" class="header"> <%=movie["Title"]%></a>
                    <div class="meta">
                        <span><%=movie["Year"]%></span>
                    </div>
                    <div class="description">
                        <p><%=movie["Title"]%> is a ...</p>
                    </div>
                    <div class="extra">
                        <a class="ui floated basic blue button" href="/movies/<%=movie["imdbID"]%>">
                            Read more <i class="right chevron icon"></i>
                        </a>
                    </div>
                </div>
                </div>
            <%}) %>
        </div>
    </div>
    </div>

<%- include("partials/footer")-%>